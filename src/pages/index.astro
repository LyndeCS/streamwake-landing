---
import "../styles/global.css";
const title = "Streamwake";
const description =
  "A small digital studio building practical software, tools, and systems.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <main class="page">
      <section class="layout" aria-label="Streamwake landing">
        <header class="brand">
          <h1 class="wordmark">Streamwake</h1>
          <div class="rule" aria-hidden="true"></div>
        </header>

        <div class="copy">
          <p class="lede">
            A small digital studio building practical software, tools, and systems.
          </p>

          <p class="meta">Early stage. Select projects in development.</p>

          <p class="contact">
            <a class="link" href="mailto:hello@streamwake.com">hello@streamwake.com</a>
          </p>
        </div>
      </section>
    </main>
  </body>
</html>

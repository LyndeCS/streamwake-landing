---
import "../styles/global.css";
const title = "Streamwake";
const description =
  "A small digital studio building practical software, tools, and systems.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Open Graph -->
    <meta property="og:site_name" content="Streamwake" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://streamwake.com/" />
	<meta property="og:image" content="https://streamwake.com/og.png" />
	<meta property="og:image:width" content="1200" />
	<meta property="og:image:height" content="630" />
	<meta property="og:image:alt" content="Streamwake â€” A small digital studio building practical software, tools, and systems." />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
	<meta name="twitter:image" content="https://streamwake.com/og.png" />
  </head>

  <body>
    <main class="page">
      <section class="layout" aria-label="Streamwake landing">
        <header class="brand">
          <h1 class="wordmark">Streamwake</h1>
          <div class="rule" aria-hidden="true"></div>
        </header>

        <div class="copy">
          <p class="lede">
            A small digital studio building practical software, tools, and systems.
          </p>

          <p class="meta">
            Early stage. Select projects in development.
          </p>

          <p class="contact">
            <a class="link" href="mailto:hello@streamwake.com">
              hello@streamwake.com
            </a>
          </p>
        </div>
      </section>
    </main>
  </body>
</html>
